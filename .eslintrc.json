{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "ignorePatterns": ["node_modules", "build", "dist", "migrations"],
    "plugins": ["prettier", "jest"],
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:prettier/recommended",
        "standard-with-typescript"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "camelcase": 0,
        "consistent-return": 0,
        "import/no-extraneous-dependencies": [
            "error",
            { "devDependencies": true }
        ],
        "prettier/prettier": 0,
        "linebreak-style": 0,
        "no-param-reassign": 0,
        "no-plusplus": 0,
        "no-console": 0,
        "radix": 0
    }
}
